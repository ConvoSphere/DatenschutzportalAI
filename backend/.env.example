# Backend Environment Variables
# Copy this to backend/.env and fill in your values

# Nextcloud
NEXTCLOUD_URL=http://localhost:8080
NEXTCLOUD_USERNAME=your_username
NEXTCLOUD_PASSWORD=your_password
NEXTCLOUD_BASE_PATH=/Datenschutzportal

# SMTP / Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_email
SMTP_PASSWORD=your_password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=Datenschutzportal
SMTP_ENCRYPTION=starttls

# General
NOTIFICATION_EMAILS=["admin@example.com"]
CORS_ORIGINS=["http://localhost:3000"]

# Security
SECRET_KEY=your-secret-key-change-in-production
API_TOKEN=your-api-token-change-in-production
ALGORITHM=HS256

# AI / OpenAI Settings
# For alternative providers (e.g. LocalAI, Ollama), change the BASE_URL
AI_API_BASE_URL=https://api.openai.com/v1
AI_API_KEY=sk-...
AI_MODEL_NAME=gpt-4-turbo-preview
# Optional: Proxy for outgoing AI requests (e.g. http://proxy.example.com:8080)
AI_PROXY=
